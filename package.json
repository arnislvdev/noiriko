{
  "name": "create-noiriko",
  "version": "0.0.1",
  "description": "CLI tool to scaffold Noiriko monorepo projects with customizable options",
  "type": "module",
  "bin": {
    "create-noiriko": "./dist/index.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --clean --minify",
    "dev": "tsup src/index.ts --format esm --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "cli",
    "monorepo",
    "turborepo",
    "shadcn",
    "nextjs",
    "boilerplate",
    "template",
    "typescript",
    "react",
    "tailwindcss",
    "create-app",
    "scaffold"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/arnislvdev/create-noiriko"
  },
  "bugs": {
    "url": "https://github.com/arnislvdev/create-noiriko/issues"
  },
  "homepage": "https://github.com/arnislvdev/create-noiriko#readme",
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0",
    "ora": "^8.0.1",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.19",
    "tsup": "^8.0.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20"
  }
}
